[flake8]
max-line-length = 120
max-complexity = 5
extend-ignore = E203, W503, D100, D104, D212
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
per-file-ignores =
    __init__.py:F401,D104
    tests/*:D100,D101,D102,D103
docstring-convention = google
statistics = true
count = true
