[flake8]
max-line-length = 120
max-complexity = 10
extend-ignore = E203, W503, D100, D101, D102, D103, D104, D105, D107, D200, D202, D205, D212, D400, D401, D403, D404, D415, SIM110
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .ruff_cache
per-file-ignores =
    __init__.py:F401,D104
    tests/*:D100,D101,D102,D103
    */examples/*:D202
    */cli.py:C901
docstring-convention = google
statistics = true
count = true
